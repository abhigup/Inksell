<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/TitlePrimaryDark</item>
        <item name="colorPrimaryDark">@color/TitlePrimaryDark</item>
        <item name="colorAccent">@color/TitlePrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/TitlePrimaryDark</item>
        <item name="colorPrimaryDark">@color/TitlePrimaryDark</item>
        <item name="colorAccent">@color/TitlePrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>


    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#EEEEEE</item>

    </style>

    <style name="ButtonDarkRed">
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/btn_darkred</item>
    </style>

    <style name="ButtonLightRed">
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/btn_lightred</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
