<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/view_user_pic"
            />

        <TextView android:textSize="12sp"
            android:layout_below="@id/view_user_pic"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_postedBy"
            android:layout_height="wrap_content" />

        <TextView android:textSize="12sp"
            android:layout_below="@id/view_post_postedBy"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_userEmail"
            android:layout_height="wrap_content" />

        <TextView android:textSize="12sp"
            android:layout_below="@+id/view_post_userEmail"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:text="@string/contactInformation"
            android:textColor="@color/half_black"
            android:id="@+id/view_post_label_contactInfo"
            android:layout_height="wrap_content" />

        <TextView android:textSize="14sp"
            android:layout_below="@id/view_post_label_contactInfo"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_contactName"
            android:layout_height="wrap_content" />

        <TextView android:textSize="14sp"
            android:layout_below="@id/view_post_contactName"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_address"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <ImageButton
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:background="@android:color/holo_red_dark"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:src="@drawable/ic_call"
            android:id="@+id/view_post_call">
        </ImageButton>

        <View android:layout_height="50dp"
            android:layout_width="1px"
            android:background="@color/button_material_light"/>

        <ImageButton
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@android:color/holo_red_light"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:src="@drawable/ic_email"
            android:id="@+id/view_post_email">
        </ImageButton>


    </LinearLayout>


</LinearLayout>