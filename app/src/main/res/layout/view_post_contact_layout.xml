<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/view_user_pic"
            />

        <TextView android:textSize="12sp"
            android:layout_below="@id/view_user_pic"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_postedBy"
            android:layout_height="wrap_content" />

        <TextView android:textSize="12sp"
            android:layout_below="@id/view_post_postedBy"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_userEmail"
            android:layout_height="wrap_content" />

        <!--<View-->
            <!--android:layout_below="@+id/view_post_userEmail"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:id="@+id/line_below_user_image"-->
            <!--android:background="@color/background" />-->


        <TextView android:textSize="12sp"
            android:layout_below="@+id/view_post_userEmail"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:text="@string/contactInformation"
            android:textColor="@color/labelTextColor"
            android:id="@+id/view_post_label_contactInfo"
            android:layout_height="wrap_content" />

        <TextView android:textSize="14sp"
            android:layout_below="@id/view_post_label_contactInfo"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_contactName"
            android:layout_height="wrap_content" />

        <TextView android:textSize="14sp"
            android:layout_below="@id/view_post_contactName"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_address"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>