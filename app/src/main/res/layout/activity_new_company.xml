
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="inksell.login.new_company">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:hint="Name"
                android:singleLine="true"
                android:ems="10"
                android:id="@+id/newtextname"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Company Name"
                android:singleLine="true"
                android:ems="10"
                android:id="@+id/newtextcompany"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Location"
                android:singleLine="true"
                android:ems="10"
                android:id="@+id/newtextlocation"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:hint="e-mail"
                android:singleLine="true"
                android:ems="10"
                android:id="@+id/newtextemail"
                android:layout_marginTop="20dp" />

            <Button
                android:text="@string/submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/ButtonPrimary"
                android:onClick="submit_click"
                android:id="@+id/button"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp">
            </Button>

        </LinearLayout>

    <include
        layout="@layout/loading_fullpage_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </RelativeLayout>