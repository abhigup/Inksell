
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/add_user_details_cv"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:textSize="30sp"
                    style="@style/MyEditTextTheme"
                    android:inputType="textNoSuggestions"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:id="@+id/add_post_title"
                    android:hint="@string/title"
                    android:paddingTop="0dp"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:textSize="15sp"
                    style="@style/MyEditTextTheme"
                    android:inputType="textNoSuggestions"
                    android:singleLine="true"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:id="@+id/add_post_used_period"
                    android:hint="@string/usedPeriod"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <EditText android:textSize="15sp"
                        style="@style/MyEditTextTheme"
                        android:inputType="textNoSuggestions"
                        android:fontFamily="sans-serif-light"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:id="@+id/add_post_expected_price"
                        android:hint="@string/expectedPrice"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                        <EditText android:textSize="15sp"
                            style="@style/MyEditTextTheme"
                            android:inputType="textNoSuggestions"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-light"
                            android:layout_width="match_parent"
                            android:id="@+id/add_post_actual_price"
                            android:hint="@string/actualPrice"
                            android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <EditText android:textSize="15sp"
                        android:layout_weight="1"
                        android:inputType="textMultiLine|textNoSuggestions"
                        style="@style/MyEditTextTheme"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="match_parent"
                        android:singleLine="false"
                        android:id="@+id/add_post_description"
                        android:hint="@string/description"
                        android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

