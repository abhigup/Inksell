<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inksell.login.already_activity">

    <EditText
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="e-mail"
        android:ems="10"
        android:singleLine="true"
        android:id="@+id/AlreadyTextEmail"
        android:inputType="textEmailAddress"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_margin="16dp"
        android:layout_below="@+id/AlreadyTextEmail"
        android:text="@string/submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        style="@style/ButtonPrimary"
        android:onClick="submit_click"
        android:id="@+id/AlreadyBtnSubmit"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
    </Button>

    <include
        layout="@layout/loading_fullpage_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
