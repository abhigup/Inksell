<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="inksell.posts.view.ViewElectronicsFragment">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:textSize="20sp"
            android:layout_width="wrap_content"
            android:textColor="@color/TitlePrimaryDark"
            android:id="@+id/view_electronic_price"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/view_electronic_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/view_electronic_linearTable">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <TextView android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:text="@string/actualPrice"
                    android:textColor="@color/half_black"
                    android:id="@+id/view_electronic_label_actualprice"
                    android:layout_height="wrap_content" />

                <TextView android:textSize="14sp"
                    android:layout_below="@+id/view_electronic_label_actualprice"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:id="@+id/view_electronic_actualPrice"
                    android:layout_height="wrap_content" />

                </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:textColor="@color/half_black"
                    android:text="@string/usedPeriod"
                    android:id="@+id/view_electronic_label_usedperiod"
                    android:layout_height="wrap_content" />

                <TextView android:textSize="14sp"
                    android:layout_below="@+id/view_electronic_label_usedperiod"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:id="@+id/view_electronic_usedperiod"
                    android:layout_height="wrap_content" />

                </RelativeLayout>

        </LinearLayout>

        <TextView android:textSize="12sp"
            android:layout_below="@+id/view_electronic_linearTable"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:text="@string/description"
            android:textColor="@color/half_black"
            android:id="@+id/view_electronic_label_description"
            android:layout_height="wrap_content" />

        <TextView android:textSize="14sp"
            android:layout_below="@+id/view_electronic_label_description"
            android:fontFamily="sans-serif-light"
            android:singleLine="false"
            android:layout_width="match_parent"
            android:id="@+id/view_electronic_description"
            android:layout_height="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_below="@+id/view_electronic_description"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:id="@+id/view_user_pic"
            />

        <TextView android:textSize="12sp"
            android:layout_below="@id/view_user_pic"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_postedBy"
            android:layout_height="wrap_content" />

        <TextView android:textSize="12sp"
            android:layout_below="@id/view_post_postedBy"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_userEmail"
            android:layout_height="wrap_content" />

        <TextView android:textSize="12sp"
            android:layout_below="@+id/view_post_userEmail"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:text="@string/contactInformation"
            android:textColor="@color/half_black"
            android:id="@+id/view_post_label_contactInfo"
            android:layout_height="wrap_content" />

        <TextView android:textSize="14sp"
            android:layout_below="@id/view_post_label_contactInfo"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_contactName"
            android:layout_height="wrap_content" />

        <TextView android:textSize="14sp"
            android:layout_below="@id/view_post_contactName"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:id="@+id/view_post_address"
            android:layout_height="wrap_content" />

        </RelativeLayout>




</FrameLayout>
