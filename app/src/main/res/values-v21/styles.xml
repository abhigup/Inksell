<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/TitlePrimaryDark</item>
        <item name="colorPrimaryDark">@color/TitlePrimaryDark</item>
        <item name="colorAccent">@color/TitlePrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/TitlePrimaryDark</item>
        <item name="colorPrimaryDark">@color/TitlePrimaryDark</item>
        <item name="colorAccent">@color/TitlePrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>


    </style>

</resources>